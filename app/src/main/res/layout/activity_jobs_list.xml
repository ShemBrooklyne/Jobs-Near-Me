<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="10dp">


        <androidx.cardview.widget.CardView
            android:layout_width="382dp"
            android:layout_height="302dp"
            app:cardBackgroundColor="#FFFFFF"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="95dp">

            <TextView
                android:id="@+id/natureTextView"
                android:layout_width="356dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="250dp"
                android:text="Publication Date"
                android:textAlignment="textEnd"
                android:textColor="#C51414" />

            <TextView
                android:id="@+id/companyView"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="140dp"
                android:text="Hiring Company" />

            <TextView
                android:id="@+id/locationView"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="170dp"
                android:text="Company's LOcation" />

            <TextView
                android:id="@+id/linkView"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="110dp"
                android:text="Link to Website" />

            <TextView
                android:id="@+id/levelsView"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="80dp"
                android:text="Difficulty Level" />

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="371dp"
                android:layout_height="40dp"
                android:background="#F6F0F0"
                android:text="position"
                android:textColor="#0B0A0B"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/categoryView"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="50dp"
                android:text="Job Category" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>